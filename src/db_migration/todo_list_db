CREATE EXTENSION IF NOT EXISTS "pgcrypto";

CREATE TABLE tasks {
	uuid UUID PRIMARY KEY DEFAULT gen_random_uuid(),
	title VARCHAR(100) NOT NULL,
	description TEXT,
	is_conclued BOOLEAN DEFAULT FALSE,
	is_deleted BOOLEAN DEFAULT FALSE,
	due_date DATE,
	status VARCHAR(15) DEFAULT NOT NULL CHECK (status IN ('pending', 'in_progress', 'completed', 'cancelled')),
	priority VARCHAR(15) DEFAULT NOT NULL CHECK (priority IN('low', 'medium', 'high', 'urgent')),
	created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
	update_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
}
